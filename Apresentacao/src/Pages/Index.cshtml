@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="conteiner form-login">
    <form method="POST">
        <fieldset>
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <center>
                        <div class="form-group">
                            <label> USUÁRIO</label>
                        </div>
                    </center>
                </div>
                <div class="col-sm-4"></div>
            </div>

            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <center>
                        <div class="form-group">   
                            <div class="input-group">
                                <span class="input-group-btn" id="limparCampo">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-user"></span></button>
                                </span>
                                <input asp-for="Usuario.Nome" type="text" class="form-control">
                                
                        </div>
                        <span asp-validation-for="Usuario.Nome" class="text-danger"></span>                   
                    </center>
                </div>
                <div class="col-sm-4"></div>
            </div>

            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <center>
                        <div class="form-group">
                            <label asp-for="Usuario.Password"></label>
                        </div>
                    </center>
                </div>
                <div class="col-sm-4"></div>
            </div>

            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <center>
                        <div class="form-group">   
                            <div class="input-group">
                                <span class="input-group-btn" id="limparCampo">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-lock"></span></button>
                                </span>
                                <input asp-for="Usuario.Password" type="password" class="form-control">
                        </div>
                         <span asp-validation-for="Usuario.Password" class="text-danger"></span>                   
                    </center>
                </div>
                <div class="col-sm-4"></div>
            </div>

            <div class="row">
                <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">ACESSO</button>
                    </div>
                <div class="col-sm-4"></div>
            </div>
        </fieldset>
    </form>
</div> 


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


